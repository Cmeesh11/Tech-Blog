<div class="container mt-5 border border-dark-subtle">
  <form>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input type="text" class="form-control" id="username" />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" />
    </div>
    <button type="submit" class="btn btn-primary mb-3" id="login-button">Login</button>
    {{#if notExist}}
    <p class="not-exist">User does not exist</p>
    {{/if}}
    <a class='d-block mb-2' href="/signup">Don't have an account? Click here to sign up!</a>
  </form>
</div>
<script src="/js/login.js"></script>