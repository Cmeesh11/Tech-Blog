<div class="container d-grid">
  {{#each posts as |post|}}
  <div class="card col-12 my-3" data-post_id="{{post.id}}">
    <div class="card-body">
      <h3 class="card-title">{{log post}} {{post.title}}</h3>
      <h4 class="card-title">Posted by {{post.user.username}} at {{dateFormat post.date}}</h4>
      <p class="card-text">{{post.text}}</p>
    </div>
    {{#if post.comments}}
      <h3>Comments:</h3>
    {{/if}}
    {{#each post.comments}}
    <div class="card">
      <div class="card-body">
        <p class="card-text fw-bold">{{this.text}}</p>
        <p class="card-text">Submitted by {{this.username}} on {{dateFormat this.date}}</p>
      </div>
    </div>
    {{/each}} 
    {{#if post.comments}}
    {{/if}}
   <button class="btn btn-secondary col-sm-12 col-md-4 col-lg-2 add-comment" data-post_id="{{post.id}}">Add comment</button>
   <button class="btn btn-success my-2 col-sm-12 col-md-4 col-lg-2 update-post" data-post_id="{{post.id}}">Update post</button>
   <button class="btn btn-danger col-sm-12 col-md-4 col-lg-2 delete-post" data-post_id="{{post.id}}">Delete post</button>
  </div>
  {{/each}}
</div>
<div class="d-flex justify-content-center" id="container">
  <button class="btn btn-primary new-post">New Post</button>
</div>
<script src="/js/newPost.js"></script>
<script src="/js/updatePost.js"></script>
<script src="/js/newComment.js"></script>
<script src="/js/deletePost.js"></script>
