{{#each posts as |post|}}
<div class="card">
  <div class="card-body">
    <h3 class="card-title">{{title}}</h3>
    <h4 class="card-title">Posted by {{post.user.username}}</h4>
    <p class="card-text">{{text}}</p>
  </div>
</div>
{{/each}}
<div class="d-flex justify-content-center" id="container">
  <button class="btn btn-primary" id="new-post">New Post</button>
</div>
<script src="/js/newPost.js"></script>